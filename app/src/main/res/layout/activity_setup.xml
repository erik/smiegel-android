<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/qr_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:text="Scan QR Code" />

        <TextView
            android:id="@+id/host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:editable="false"
            android:text="If you know the server information, you can enter it here. Otherwise, hit the button below to scan the QR in your browser."
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Service"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hostField"
            android:layout_below="@+id/host_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:hint="Host"
            android:layout_toStartOf="@+id/textView"
            android:layout_toLeftOf="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=":"
            android:id="@+id/host"
            android:layout_toEndOf="@+id/hostField"
            android:layout_alignBottom="@+id/hostField"
            android:layout_toRightOf="@+id/hostField" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/portField"
            android:layout_toEndOf="@+id/host"
            android:hint="Port"
            android:layout_above="@+id/sharedSecretField"
            android:layout_alignRight="@+id/sharedSecretField"
            android:layout_alignEnd="@+id/sharedSecretField"
            android:layout_toRightOf="@+id/host" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/sharedSecretField"
            android:layout_below="@+id/hostField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Shared Secret" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/authTokenField"
            android:layout_below="@+id/sharedSecretField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Auth Token" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit_button"
            android:layout_toEndOf="@+id/authTokenField"
            android:layout_alignBottom="@+id/authTokenField"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Or..."
            android:id="@+id/textView4"
            android:layout_above="@+id/qr_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="104dp" />

    </RelativeLayout>

</LinearLayout>