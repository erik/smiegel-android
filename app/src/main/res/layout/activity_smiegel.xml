<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SmiegelActivity"
    android:id="@+id/foobar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stay Golden, Bro"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/host"
        android:layout_below="@+id/textView"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/port"
        android:layout_toStartOf="@+id/port"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/shared_secret"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/host"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/auth_token"
        android:layout_below="@+id/shared_secret"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/port"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignTop="@+id/host"
        android:layout_alignRight="@+id/shared_secret"
        android:layout_alignEnd="@+id/shared_secret"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignBottom="@+id/host" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Host"
        android:id="@+id/textView2"
        android:layout_toStartOf="@+id/host"
        android:layout_alignTop="@+id/host"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shared secret"
        android:id="@+id/textView3"
        android:layout_toStartOf="@+id/shared_secret"
        android:layout_toLeftOf="@+id/shared_secret"
        android:layout_alignBottom="@+id/shared_secret" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Auth Token"
        android:id="@+id/textView4"
        android:layout_toStartOf="@+id/auth_token"
        android:layout_alignTop="@+id/auth_token"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim SMS"
        android:id="@+id/send_sms"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forget conf"
        android:id="@+id/forget"
        android:layout_alignTop="@+id/send_sms"
        android:layout_toRightOf="@+id/send_sms"
        android:layout_toEndOf="@+id/send_sms"/>

</RelativeLayout>
